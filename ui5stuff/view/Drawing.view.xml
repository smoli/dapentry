<mvc:View
        controllerName="sts.drawable.controller.Drawing"
        displayBlock="true"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:drawing="sts.drawable.controls.drawing"
        xmlns:operation="sts.drawable.controls.operation"
>
        <VBox>
            <operation:OperationEditor tokens="{appModel>/editableCodeLine/tokens}" change="onCodeLineChanged"/>
            <drawing:Drawing id="drawing"
                             previewOperation="onPreviewOperation"
                             newOperation="onNewOperation"
                             toolAborted="onToolAborted"
                             toolDone="onToolDone"
                             toolSwitch="onToolSwitch"
                             nextStep="onNextStep"
                             objectDeleted="onObjectDeleted"
                             selectionChange="onSelectionChange"
            />
            <Text text="{appModel>/toolHint}"/>
        </VBox>
</mvc:View>
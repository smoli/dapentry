<mvc:View
        controllerName="sts.drawable.controller.Structure"
        displayBlock="true"
        xmlns="sap.m"
        xmlns:l="sap.ui.layout"
        xmlns:code="sap.ui.codeeditor"
        xmlns:step="sts.drawable.controls.steps"
        xmlns:mvc="sap.ui.core.mvc">

    <Page>
        <l:Splitter orientation="Vertical">
            <l:contentAreas>

                <VBox>
                <mvc:XMLView viewName="sts.drawable.view.DataEditor" />
                </VBox>


                <VBox items="{ path: 'appModel>/segmentedCode' }">
                    <Text text="{appModel>code}" />
                </VBox>
                
                <step:StepList steps="{appModel>/segmentedCode}" selectionChange="onStepSelectionChange">
                    <step:steps>
                        <step:Step tokens="{appModel>tokens}"
                                   codeIndex="{appModel>index}"
                                   selected="{appModel>selected}"
                                   level="{appModel>level}"
                        />
                    </step:steps>
                </step:StepList>

                <code:CodeEditor value="{appModel>/codeString}" change="onCodeChanged" syntaxHints="false"/>
            </l:contentAreas>
        </l:Splitter>
    </Page>

</mvc:View>

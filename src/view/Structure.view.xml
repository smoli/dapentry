<mvc:View
        controllerName="sts.drawable.controller.Structure"
        displayBlock="true"
        xmlns="sap.m"
        xmlns:l="sap.ui.layout"
        xmlns:code="sap.ui.codeeditor"
        xmlns:mvc="sap.ui.core.mvc">

    <Page>
        <l:Splitter orientation="Vertical">
            <l:contentAreas>

                <VBox>
                <mvc:XMLView viewName="sts.drawable.view.DataEditor" />
                </VBox>


           <!--     <VBox items="{ path: 'appModel>/segmentedCode' }">
                    <sts:OperationEditor tokens="{appModel>tokens}" />
                </VBox>
-->
                <List
                        mode="SingleSelectMaster"
                        selectionChange="onCodelineSelectionChange"
                        items="{ path: 'appModel>/segmentedCode',
                               factory: '.codeDescriptionFactory' }">
                </List>

                <code:CodeEditor value="{appModel>/codeString}" change="onCodeChanged" syntaxHints="false"/>

            </l:contentAreas>
        </l:Splitter>
    </Page>

</mvc:View>
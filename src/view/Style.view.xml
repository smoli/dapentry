<mvc:View
        controllerName="sts.drawable.controller.Style"
        displayBlock="true"
        xmlns="sap.m"
        xmlns:l="sap.ui.layout"
        xmlns:unified="sap.ui.unified"
        xmlns:mvc="sap.ui.core.mvc">

    <Page>
<!--        <Text text="lkjh" />-->
        <VBox items="{appModel>/selection}">
            <items>
                <VBox>
                <unified:ColorPicker id="cp" mode="HSL" colorString="{appModel>style/fillColor}" change="onColorChange"/>
                <Slider value="{appModel>style/strokeWidth}" width="100%"
                        min="{= ${appModel>type} === 'Line' ? 1 : 0 }"
                        max="25"
                        showAdvancedTooltip="true"
                        showHandleTooltip="false"
                        inputsAsTooltips="true"
                        change="onStrokeWidthChange"
                        class="sapUiMediumMarginBottom" />
                </VBox>
            </items>
        </VBox>
    </Page>

</mvc:View>
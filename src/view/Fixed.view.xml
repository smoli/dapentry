<mvc:View
        controllerName="sts.drawable.controller.Fixed"
        displayBlock="true"
        xmlns="sap.m"
        xmlns:l="sap.ui.layout"
        xmlns:code="sap.ui.codeeditor"
        xmlns:step="sts.drawable.controls.steps"
        xmlns:mvc="sap.ui.core.mvc">

    <l:Splitter orientation="Vertical">
        <l:contentAreas>
            <Toolbar>
                <layoutData>
                    <l:SplitterLayoutData size="2rem"
                                          resizable="false"/>
                </layoutData>
                <ToolbarSpacer/>
                <Button text="1:1" press="onAspectRatio1_1"/>
                <Button text="3:2" press="onAspectRatio3_2"/>
                <Button text="4:3" press="onAspectRatio4_3"/>
                <Button text="16:9" press="onAspectRatio16_9"/>
                <Button text="16:10" press="onAspectRatio16_10"/>
            </Toolbar>
            <l:Splitter orientation="Horizontal">
                <l:contentAreas>
                    <l:Splitter orientation="Vertical">
                        <l:layoutData>
                            <l:SplitterLayoutData size="{= ${appModel>/structureEditor} ? 'auto' : '0px' }"
                                                  resizable="{appModel>/structureEditor}"/>
                        </l:layoutData>
                        <l:contentAreas>

                            <VBox>
                                <layoutData>
                                    <l:SplitterLayoutData size="{appModel>/dataEditorSize}"/>
                                </layoutData>
                                <mvc:XMLView viewName="sts.drawable.view.DataEditor"/>
                            </VBox>

                            <mvc:XMLView viewName="sts.drawable.view.StepList"/>

                            <code:CodeEditor value="{appModel>/codeString}" change="onCodeChanged" syntaxHints="false">
                                <code:layoutData>
                                    <l:SplitterLayoutData
                                            size="{= ${appModel>/codeEditor} ? ${appModel>/codeEditorSize} : '0px'}"
                                            resizable="{appModel>/codeEditor}"/>
                                </code:layoutData>
                            </code:CodeEditor>


                        </l:contentAreas>
                    </l:Splitter>

                    <VBox>
                        <layoutData>
                            <l:SplitterLayoutData size="{= ${appModel>/structureEditor} ? '65%' : 'auto' }"/>
                        </layoutData>
                        <mvc:XMLView viewName="sts.drawable.view.Drawing"/>
                    </VBox>

                    <VBox>
                        <layoutData>
                            <l:SplitterLayoutData size="{= ${appModel>/styleEditor} ? '330px' : '0px'}"
                                                  resizable="false"/>
                        </layoutData>

                        <mvc:XMLView viewName="sts.drawable.view.Style"/>
                    </VBox>

                </l:contentAreas>
            </l:Splitter>

            <Toolbar>
                <layoutData>
                    <l:SplitterLayoutData size="2rem" resizable="false"/>
                </layoutData>
                <ToggleButton text="Structure" pressed="{appModel>/structureEditor}"/>
                <ToggleButton text="Code" pressed="{appModel>/codeEditor}" visible="{appModel>/structureEditor}"/>
                <ToolbarSpacer/>
                <ToggleButton text="Style" pressed="{appModel>/styleEditor}"/>

            </Toolbar>
        </l:contentAreas>
    </l:Splitter>

</mvc:View>
